.container
  .followHeader
    .header_logos
      = link_to :back do
        = image_tag 'back2.png', class: 'header_back'
    %p.centered-text= 'Followings'

.container
  - @followings.each do |following|
    .follow_detail
      = link_to account_path(following) do
        = image_tag following.avatar_image
      .text-area
        %p.name= following.name
        %p.last-login
          - if following.last_sign_in_at.present?
            = "Last seen #{time_ago_in_words(following.last_sign_in_at)} ago"
          - else
            = "Last seen: Never signed in"
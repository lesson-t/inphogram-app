.post_detail
  = link_to account_path(post.user) do
    - if post.photos.attached?
      = image_tag post.user.avatar_image
  %p= post.user.name
  %p= ' ãƒ» '
  %p= post.display_created_at

.post
  - if post.photos.attached?
    .post_image
      - post.photos.each do |photo|
        = image_tag photo, width:200
  .post_content
    %h2= 'Content'
    %p= @post.content